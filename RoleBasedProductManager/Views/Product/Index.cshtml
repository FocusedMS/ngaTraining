@model IEnumerable<ProductManagementSystem.Models.Product>

@{
    ViewData["Title"] = "Products";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Product List</h2>
    @if (User.IsInRole("Admin"))
    {
        <a asp-action="Create" class="btn btn-success">Create New Product</a>
    }
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">
        No products found. 
        @if (User.IsInRole("Admin"))
        {
            <a asp-action="Create">Create your first product</a>
        }
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Description</th>
                    <th>Created Date</th>
                    <th>Modified Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>$@item.Price.ToString("F2")</td>
                        <td>@(string.IsNullOrEmpty(item.Description) ? "No description" : item.Description)</td>
                        <td>@item.CreatedDate.ToString("MM/dd/yyyy")</td>
                        <td>@(item.ModifiedDate?.ToString("MM/dd/yyyy") ?? "Never")</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Edit</a>
                                @if (User.IsInRole("Admin"))
                                {
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
