@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Product Management System</h1>
    <p class="lead">A secure role-based system for managing product information.</p>
    
    @if (User.Identity?.IsAuthenticated == true)
    {
        <div class="row mt-4">
            <div class="col-md-6 offset-md-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Quick Actions</h5>
                        <p class="card-text">You are logged in as: <strong>@User.Identity.Name</strong></p>
                        <a asp-controller="Product" asp-action="Index" class="btn btn-primary">View Products</a>
                        @if (User.IsInRole("Admin"))
                        {
                            <a asp-controller="Product" asp-action="Create" class="btn btn-success ms-2">Create New Product</a>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row mt-4">
            <div class="col-md-6 offset-md-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Get Started</h5>
                        <p class="card-text">Please login or register to access the product management features.</p>
                        <a asp-controller="Account" asp-action="Login" class="btn btn-primary">Login</a>
                        <a asp-controller="Account" asp-action="Register" class="btn btn-outline-primary ms-2">Register</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
