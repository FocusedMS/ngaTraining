<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SecureMvcAuth</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header class="topbar">
        <div class="brand">SecureMvcAuth</div>
        <nav>
            <a asp-controller="Home" asp-action="Index">Home</a>
            <a asp-controller="Account" asp-action="Login">Login</a>
            <a asp-controller="Admin" asp-action="Dashboard">Admin</a>
            <a asp-controller="Profile" asp-action="UserProfile">Profile</a>
            <form asp-controller="Account" asp-action="Logout" method="post" style="display:inline">
                @Html.AntiForgeryToken()
                <button type="submit" class="linklike">Logout</button>
            </form>
        </nav>
    </header>
    <main class="container">
        @RenderBody()
    </main>
</body>
</html>
